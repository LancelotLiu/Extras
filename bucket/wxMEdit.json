            "wxMEdit"
        ]
    ],
    "post_install": [
        "info '[Portable Mode] Configuring profiles directory...'",
        "'{ \"path\" : \".\" }' | Set-Content -Path \"$dir\\profiles.config\"",
        "if (!(Test-Path \"$dir\\.wind\\profiles\") -and (Test-Path \"$persist_dir\\profiles\")) {",
        "    info '[Portable Mode] Copying existing profiles...'",
        "    Copy-Item \"$persist_dir\\profiles\" \"$dir\\.wind\" -Recurse",
        "}"
    ],
    "persist": ".wind",
    "checkver": {
        "github": "http://downloads.sourceforge.net/project/wxmedit"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "http://downloads.sourceforge.net/project/wxmedit/$version/wxMEdit-$version-win64-bin.zip"
            },
            "32bit": {
                "url": "http://downloads.sourceforge.net/project/wxmedit/$version/wxMEdit-$version-win32-bin.zip"
            }
        },
        "extract_dir": "wxMEdit"
    }
}
